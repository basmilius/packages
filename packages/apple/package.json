{
    "name": "@basmilius/apple",
    "description": "Implementation of various Apple protocols relating AirPlay and Apple TV.",
    "version": "0.0.0",
    "type": "module",
    "license": "MIT",
    "funding": "https://github.com/sponsors/basmilius",
    "author": {
        "name": "Bas Milius",
        "email": "bas@mili.us",
        "url": "https://bas.dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/basmilius/packages.git",
        "directory": "packages/apple"
    },
    "keywords": [
        "apple",
        "airplay",
        "tv",
        "apple tv",
        "homekit"
    ],
    "files": [
        "dist",
        "src",
        "CODEOWNERS",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "bun -b build.ts",
        "watch": "bun build ./src/index.ts --root src --outdir dist --sourcemap=linked --format esm --target node --watch -e @plist/binary.parse -e @plist/binary.serialize -e fast-srp-hap -e futoin-hkdf -e node-dns-sd -e tweetnacl -e uuid"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "dependencies": {
        "@plist/binary.parse": "^1.1.0",
        "@plist/binary.serialize": "^1.1.0",
        "chacha": "^2.1.0",
        "fast-srp-hap": "^2.0.4",
        "futoin-hkdf": "^1.5.3",
        "node-dns-sd": "^1.0.1",
        "oxc-transform": "^0.81.0",
        "tweetnacl": "^1.0.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@basmilius/tools": "workspace:*",
        "@types/bun": "^1.2.19"
    }
}
